<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <!--                       Validators                      -->
    <validator>
        <validator-id>messenger.passwordValidator</validator-id>
        <validator-class>com.pehulja.jsf.validators.PasswordValidator</validator-class>
    </validator>
    <validator>
        <validator-id>messenger.fioValidator</validator-id>
        <validator-class>com.pehulja.jsf.validators.FIOValidator</validator-class>
    </validator>
    <validator>
        <validator-id>messenger.telephoneValidator</validator-id>
        <validator-class>com.pehulja.jsf.validators.TelephoneValidator</validator-class>
    </validator>
    <validator>
        <validator-id>messenger.emailValidator</validator-id>
        <validator-class>com.pehulja.jsf.validators.EmailValidator</validator-class>
    </validator>
 
  <!--                       Resource-bundles                      --> 
    <application>
        <locale-config>
            <default-locale>ru</default-locale>
            <supported-locale>ru</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>        
  
  <!--                       Navigation rules                     -->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/loginPage.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>userData</from-outcome>
            <to-view-id>/userData.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>account</from-outcome>
            <to-view-id>/account.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>registration</from-outcome>
            <to-view-id>/registration.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
